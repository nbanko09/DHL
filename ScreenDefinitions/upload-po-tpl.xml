<?xml version="1.0" encoding="UTF-8"?>
<propertyTemplate
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://www.managedpay.net/schemas/template.xsd">
        
    <labels>
	<!-- Label overrides for this template -->
	<locale name="en">
	</locale>
	</labels>

	
	<section name="invoice" visible="true" collapsible="false" collapsed="false">
		<properties>
			
			<dropDown row="1" col="1" name="type" choiceList="choice.invoiceTypes" readonly="true" defaultValue="PO" forceDefault="true"/>
			<dropDown row="1" col="2" name="subType" choiceList="choice.invoiceSubTypes.PO" readonly="false" defaultValue="INV" forceDefault="true" validation="required"/>
			<text row="2" col="1" name="number" validation="noSpecialCharacters"/>
			<date row="2" col="2" name="date" readonly="false" validation="required" styleClass="date"/>
			<dropDown row="3" col="1" name="sensitivity" choiceList="choice.sensitivity" validation="required"  styleClass="twohundred" readonly="true" defaultValue="1" forceDefault="true" />
			<date row="3" col="2"  name="dueDate" readonly="true" styleClass="date" validation="required"/>
			<poNumber row="4" col="1" name="poId" readonly="false" validation="required"/>
			<dynamicDropDown row="4" col="2" name="companyCode" providerClass="com.miriasystems.ui.providers.CompanyChoiceListProvider" readonly="false"/>
			<dropDown row="4" col="3" name="department" choiceList="choice.department"  validation="required" styleClass="twohundred" forceDefault="true"/>
		
		</properties>
		<actions>
			<iconAction name="selectApprovers" icon="/images/ico-route-w24.png" width="24" height="24" readOnlyLink="javascript:openViewRoutingWindow('$contextPath$', '$wobNumber$', 'nonPo')" link="javascript:openUploadRoutingWindow('/ManagedPay/custom', 'routing/upload.action','nonPo', 'MP_APPROVER1')" alwaysActive="true" readonly="false"/>
			<iconAction name="print" icon="/images/ico-print-w24.png" width="24" height="24" link="javascript:window.print()" visible="true" alwaysActive="true"/>
			<iconAction name="statusWindow" icon="/images/ico-history-w24.png" width="24" height="24" link="javascript:openStatusWindow('$seqId$', '$contextPath$');return false;" alwaysActive="true"/>
			<iconAction name="help" icon="/images/ico-help-w24.png" width="24" height="24" link="javascript:openHelp('User_Interfaces/Working_with_Invoices.htm', '$contextPath$')" alwaysActive="true"/>
			<button name="forward" command="forward" readonly="false" docType="upload" type="submit" isAnchored="false" title="forwardTitle" styleClass="button70"/>
		</actions>
	</section>
	
	<section name="invoiceDetails" visible="true" collapsible="true" collapsed="false">
	<properties>	
			<lookup row="1" col="1" name="vendor.name" lookupType="lookup.vendorCode" readonly="true" inputReadonly="true"/>
			<invisibleLookup row="1" col="3" name="vendorId" lookupType="lookup.vendorCode" styleClass="twohundred" readonly="true" inputReadonly="true" validation="required"/>
			<lookup row="2" col="1" name="routingCode" lookupType="lookup.costObject1" readonly="true" inputReadonly="true" validation="required" styleClass="onehundredpercent"/>
			<text row="2" col="3" name="firstApproverName" styleClass="threehundred" readonly="true" inputReadonly="true"/>
			<currency row="3" col="1" name="grossAmount" validation="required, nonZero" styleClass="currency"/>
			<dynamicDropDown row="3" col="3" name="paymentTypeId" providerClass="com.miriasystems.ui.providers.PaymentTypeChoiceListProvider" defaultValue="1" forceDefault="true" validation="required"/>
			<currency row="4" col="1" name="taxAmount1" readonly="false" styleClass="currency"/>
			<dynamicDropDown row="4" col="3" name="paymentTermId" providerClass="com.miriasystems.ui.providers.PaymentTermChoiceListProvider" validation="required" />
			<date row="5" col="3" readonly="true" name="dueDate" styleClass="date" validation="required"/>
			<text row="6" col="1-3" name="checkStubMessage" styleClass="eighthundred" readonly="false" />
			<textArea row="7" col="1-3" name="voucherComments" styleClass="comment"/>
		</properties>
	</section>

	<section name="vendorDetails" visible="true" collapsible="true" collapsed="false">
		<properties>
			<text row="1" col="1-3" name="vendor.tbdString1" readonly="true" styleClass="sixhundred"/> <!--DBA-->
			<text row="1" col="4" name="vendor.tbdString2" readonly="true" styleClass="twohundred"/> <!-- Tax Categgory-->
			<text row="2" col="1-3" name="vendorAddress.address1" readonly="true" styleClass="sixhundred"/>
			<text row="2" col="4" name="vendor.phone" readonly="true" styleClass="twohundred"/>
			<text row="3" col="1-3" name="vendorAddress.address2" readonly="true" styleClass="sixhundred"/>
			<text row="3" col="4" name="vendorAddress.state" readonly="true"/>
			<text row="4" col="1-3" name="vendorAddress.city" readonly="true" styleClass="sixhundred" />
			<text row="4" col="4" name="vendorAddress.postalCode" readonly="true"/>
	    </properties>
	</section>
	
		
	<section name="New Vendor Details" visible="true" collapsible="true" collapsed="false">
		<properties>
			<label row ="1" col="1" name="Default Address" position="left"/>
			<text row="2" col="1-4" name="custom2.name" readonly="true" styleClass="fulllookup"/>
			<text row="3" col="1-4" name="custom2.address1" readonly="true" styleClass="fulllookup"/>
			<text row="4" col="1" name="custom2.city" readonly="true" />
			<text row="4" col="2" name="custom2.state" readonly="true"/>
			<text row="4" col="3" name="custom2.postalCode" readonly="true"/>
			<text row="5" col="1" name="custom2.address2" readonly="true"/>
			<text row="5" col="2-4" name="custom2.address3" readonly="true"/>
			<label row ="6" col="1" name="Remit Address" position="left"/>
			<text row="7" col="1-4" name="custom2.rmtName" readonly="true" styleClass="fulllookup"/>
			<text row="8" col="1-4" name="custom2.rmtAddress1" readonly="true" styleClass="fulllookup"/>
			<text row="9" col="1" name="custom2.rmtCity" readonly="true" />
			<text row="9" col="2" name="custom2.rmtState" readonly="true"/>
			<text row="9" col="3" name="custom2.rmtPostalCode" readonly="true"/>
	    </properties>
	</section>
	
	
	
	<section name="lineItems" visible="true" collapsible="true" collapsed="false">	
		<lineItemProperties showTotal="true" showTaxTotal="false">
			<currency row="1" col="1" name="quantity" readonly="false" validation="decimal" styleClass="ninety"/>
			<currency row="1" col="2" name="unitPrice"  readonly="false" validation="currency" numDecimals="6" styleClass="ninety"/><!--unit price-->
			<currency row="1" col="3" name="lineTotal"  readonly="false" validation="required" styleClass="ninety" />
			<text row="1" col="4" name="itemCode" readonly="false" styleClass="twohundred"/><!--part desc-->
			<text row="1" col="5" name="itemDescription" readonly="false" styleClass="threehundred"/><!--part desc-->
			<checkbox row="1" col="6-8" name="matched" visible="false" styleClass="ten" />		
			<text row="2" col="3" name="poLine.receivedQuantity"  readonly="true" styleClass="ninety"/>	
			<dropDown row="2" col="4" name="uom" choiceList="choice.UOM" readonly="false" defaultValue="EA" styleClass="ninety"/>	
			<lookup row="2" col="6" name="accountCode" lookupType="lookup.accountCode" validation="required" readonly="true" inputReadonly="true" styleClass="twohundred"/>
			<text row="2" col="7" name="account.description" readonly="true" styleClass="threehundred"/>
		</lineItemProperties>
			
		<actions>
				<!-- The following set of actions are standard ActivePay and should be included relatively unmodified from the baseline version in most templates -->
			<iconAction name="RemoveAllItems" icon="/images/ico-del-all-w24.png" docType="upload" width="24" height="24" link="javascript:submitCommand(this,'deleteAllLineItems','anchor_lineItems')" visible="true" alwaysActive="false"/>
			<iconAction name="RemoveMarkedItems" icon="/images/ico-del-match-w24.png" docType="upload" width="24" height="24" link="javascript:submitCommand(this,'deleteMarkedLines','anchor_lineItems')" visible="true" alwaysActive="false"/>
			<iconAction name="RemoveUnMarkedItems" icon="/images/ico-del-unmatched-w24.png" docType="upload" width="24" height="24" link="javascript:submitCommand(this,'deleteUnMarkedLines','anchor_lineItems')" visible="true" alwaysActive="false"/>
			<!-- The following set of actions are standard ManagedPay and should be included relatively unmodified from the baseline version in most templates -->
			<iconAction name="selectTemplate" icon="/images/ico-gltemplate-w24.png" width="24" height="24" link="javascript:openTemplateWindow('$contextPath$')" alwaysActive="false" />
			<dropDown name="lineitemsdropdown" choiceList="choice.lineitemsdropdown" alwaysActive="false" onChange="javascript:submitCommandFromDropdown(this,'addLineItem','anchor_lineItems')"/>
			<iconAction name="addLineItem" icon="/images/ico-add-line-w24.png" docType="upload" width="24" height="24" link="javascript:submitCommandUpload(this,'addLineItem','anchor_lineItems')" visible="true" alwaysActive="false"/>
			<iconAction name="removeLineItem" icon="/images/ico-del-line-w24.png" docType="upload" width="24" height="24" link="javascript:submitCommandUpload(this,'deleteLineItem','anchor_lineItems')" visible="true" alwaysActive="false"/>	
		</actions>
	</section>
	
	
	
		
	<section name="Payment Information" visible="false" collapsible="true" collapsed="false">
		<properties>
			<text row="1" col="1-2" name="custom2.bankName" readonly="false" styleClass="fulllookup"/>
			<text row="2" col="1" name="custom2.tbdString1" readonly="false" styleClass="fourhundred"/>
			<text row="2" col="2" name="custom2.tbdString2" readonly="false" styleClass="fourhundred"/>
	    </properties>
	</section>
	
	
	
		
	<hiddenFields>
		
		<hidden name="postingERPId" defaultValue="AOPS001"/>
		<hidden name="vendorERPId" defaultValue="AOPS001"/>
        <hidden name="newBatchNumber"/>
        <hidden name="paymentTermERPId" defaultValue="AOPS001"/>
		<hidden name="paymentTypeERPId"/>
        <hidden name="vendor.status" defaultValue="V"/>
		<hidden name="uploadRef"/>
		<hidden name="originatorId"/>
		<hidden name="requesterId"/>
		<hidden name="originatorName"/>
		<hidden name="scanSource" defaultValue="Direct Entry" forceDefault="true"/>
		<hidden name="scanType" defaultValue="Trade" forceDefault="true"/>
		<hidden name="requester.userName"/>
		<hidden name="alternatevendor" defaultValue="false" forceDefault="true"/>
		<hidden name="AFENumber" defaultValue="1" forceDefault="true"/>
		<hidden name="custom1.tbdComment1" defaultValue="1." forceDefault="true" readonly="true"/>
		<hidden name="remitToId"/>
     </hiddenFields>

	<processors>
		<processor name="com.miriasystems.processors.NetAmountNoDiscountProcessor"/>
		<processor name="com.miriasystems.processors.TotalLineAmountProcessor"/>
		<processor name="com.custom.processors.DueDateProcessor"/>
		<processor name="com.miriasystems.processors.LineTotalCalculator"/>
    </processors>
</propertyTemplate>
