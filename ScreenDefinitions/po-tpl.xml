<?xml version="1.0" encoding="UTF-8"?>
<propertyTemplate xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	
	<labels>
		<locale name="en">	
		</locale>
	</labels>
	
	<section name="doc" collapsible="false" collapsed="false">
		<!-- The following section is standard ManagedPay and should be included relatively unmodified from the baseline version in most templates -->
		<properties>
			<valueAlias row="1" col="1-2" name="processInformation.queueName" readonly="true" styleClass="twohundred"/>
			<text row="1" col="3-4" name="originatorName" styleClass="twohundred" readonly="true"/>
			<textArea row ="2" col="1-4" name="processInformation.comment" readonly="false" styleClass="comment" defaultValue="" forceDefault="true" />
			<output row="3" col="1-4" name="processInformation.previousComment" readonly="true" styleClass="comment" escapeXml="false"/>
		</properties>

		<actions>
			<getNext name="next" readonly="false" showLabel="true" visible="true" toLeft="true" styleClass="getNext70"/>
			<rejectButton name="reject" readonly="false" isAnchored="false" title="rejectTitle" styleClass="button70"/>
			<button name="release" command="release" readonly="false" visible="true" type="submit" title="releaseTitle" styleClass="button70"/>
			<button name="updateRelease" command="updateRelease" readonly="false" visible="true" type="submit" title="updateReleaseTitle" styleClass="button70"/>
			<button name="update" command="update" readonly="false" visible="true" type="submit" title="updateTitle" styleClass="button70"/>
			<button name="forward" command="forward" readonly="false" type="submit" isAnchored="false" title="forwardTitle" styleClass="button70"/>
		</actions>
	</section>

	<section name="invoice" visible="true" collapsible="false" collapsed="false">
		<properties>
			<dropDown row="1" col="1" name="type" choiceList="choice.invoiceTypes" readonly="true" validation="required" onChange="reloadPage(this)"/>
			<dropDown row="1" col="2" name="subType" choiceList="choice.invoiceSubTypes.PO" readonly="false==" validation="required" onChange="reloadPage(this)"/>
			<dropDown row="1" col="3" name="docPriority" choiceList="choice.priority" styleClass="onehundred" readonly="false"/>			
			<text row="2" col="1" name="number" validation="required, noSpecialCharacters"/>
			<date row="2" col="2" name="date" readonly="false" validation="required" styleClass="date"/>
			<date row="2" col="3"  name="dueDate" readonly="true" styleClass="date" validation="required"/>
			<dynamicDropDown row="3" col="1" name="companyCode" providerClass="com.miriasystems.ui.providers.CompanyChoiceListProvider" readonly="false"/>
			<dropDown row="3" col="2" name="department" choiceList="choice.department" styleClass="twohundred" readonly="false" />
			<dropDown row="3" col="3" name="sensitivity" choiceList="choice.sensitivity" validation="required" styleClass="onehundred"/>
			<poNumber row="4" col="1" name="poId" readonly="false" />
			<lookup row="4" col="2" name="buyerId" lookupType="lookup.buyer" readonly="true" inputReadonly="true" styleClass="fulllookup twohundred" />
		</properties>
		
		<actions>
			<!-- The following set of actions are standard ManagedPay and should be included relatively unmodified from the baseline version in most templates -->
			<iconAction name="launch" icon="/images/ico-tax-w24.png" width="24" height="24" link="javascript:submitCommandUpload(this, 'launchOverrideEditWorkflow','')" visible="false" alwaysActive="true"/>
			<postingReplyAction name="postings" icon="/images/ico-paid-w24.png" width="24" height="24" link="javascript:openPostingReplyWindow('$contextPath$', '$wobNumber$')" visible="true"/>
			<iconAction name="editRouting" icon="/images/ico-route-w24.png" width="24" height="24" readOnlyLink="javascript:openViewRoutingWindow('$contextPath$', '$wobNumber$', 'nonPo')" link="javascript:openRoutingWindow('$contextPath$', '$wobNumber$', 'nonPo', 'DEV-APP1_DEV1_MPSys_Dev')" alwaysActive="true" readonly="false"/>			
			<iconAction name="email" icon="/images/ico-mail-w24.png" width="24" height="24" link="javascript:openSendEmailWindow('$contextPath$', '$imageGUID$', '$wobNumber$')" alwaysActive="true"/>
			<iconAction name="attachments" icon="/images/ico-attachment-w24.png" width="24" height="24" link="javascript:openAttachmentsWindow('$contextPath$', '$wobNumber$')" alwaysActive="true"/>
			<attachmentCountAction name="attachmentCount" visible="true"/>
			<iconAction name="print" icon="/images/ico-print-w24.png" width="24" height="24" link="javascript:window.print()" visible="false" alwaysActive="true"/>
			<iconAction name="barcode" icon="/images/ico-barcode-w24.png" width="24" height="24" link="javascript:openPrintBarcodeWindow('$contextPath$', '$uploadRef$', '$seqId$')" alwaysActive="true"/>
			<iconAction name="statusWindow" icon="/images/ico-history-w24.png" width="24" height="24" link="javascript:openStatusWindow('$seqId$', '$contextPath$');return false;" alwaysActive="true"/>
			<iconAction name="help" icon="/images/ico-help-w24.png" width="24" height="24" link="javascript:openHelp('User_Interfaces/Working_with_Invoices.htm', '$contextPath$')" alwaysActive="true"/>
		</actions>
	</section>
	
	<section name="invoiceDetails" visible="true" collapsible="true" collapsed="false">
	
		<properties>
			<lookup row="1" col="1-4" name="vendor.name" lookupType="lookup.vendorCode" readonly="true" inputReadonly="true" validation="required" styleClass="fulllookup onehundredpercent"/>
			<lookup row="1" col="5" name="vendorId" lookupType="lookup.vendorCode" styleClass="twohundred" readonly="true" inputReadonly="true" validation="required"/>
			<lookup row="2" col="1-2" name="routingCode" lookupType="lookup.costObject1" readonly="true" inputReadonly="true" styleClass="onehundredpercent"/>
			<text row="2" col="3-4" name="firstApproverName" styleClass="twohundred" readonly="true"/>   <!-- First Approver Filled by Cost Code Lookup -->
			<currency row="3" col="1-2" name="grossAmount" validation="required, nonZero" styleClass="currency"/>
			<dynamicDropDown row="3" col="3-4" name="paymentTypeId" providerClass="com.miriasystems.ui.providers.PaymentTypeChoiceListProvider" styleClass="twohundred" validation="required"/>
			<currency row="4" col="1-2" name="taxAmount1" readonly="false" styleClass="currency"/>
			<dynamicDropDown row="4" col="3-4" name="paymentTermId" providerClass="com.miriasystems.ui.providers.PaymentTermChoiceListProvider" styleClass="twohundred" validation="required" onBlur="reloadPage(this)" />
			<dropDown row="5" col="1-4" name="specialHandlingCode" choiceList="choice.comments" styleClass="twohundred" />
			<text row="6" col="1-5" name="checkStubMessage" styleClass="ninetypercent" readonly="false" />
			<textArea row="7" col="1-5" name="voucherComments" styleClass="comment"/>
		</properties>
	</section>
	
	<section name="invoiceAccountDetails" visible="false" collapsible="true" collapsed="false">
		<properties>
			<checkbox row="1" col="1" name="tbdBoolean1" readonly="false" />
			<text row="2" col="1" name="tbdString2" readonly="false" styleClass="twohundred"/>	
			<text row="3" col="1" name="tbdString1" readonly="false" styleClass="twohundred"/>	
			<text row="1" col="3" name="scanVendorAddress1" readonly="false" styleClass="twohundred"/>
			<text row="2" col="3" name="scanVendorAddress2" readonly="false" styleClass="twohundred"/>	
			<text row="3" col="3" name="tbdString3" readonly="false" styleClass="twohundred"/>	
		</properties>
	</section>
	
	
	<section name="vendorDetails" visible="true" collapsible="true" collapsed="true">
		<properties>
			<text row="1" col="1-3" name="vendor.name2" readonly="true" styleClass="sixhundred"/>
			<text row="2" col="1-3" name="vendor.address1" readonly="true" styleClass="sixhundred"/>
			<text row="3" col="1-3" name="vendor.address2" readonly="true" styleClass="sixhundred"/>
			<text row="4" col="1-3" name="vendor.address3" readonly="true" styleClass="sixhundred"/>
			<text row="5" col="1-3" name="vendor.city" readonly="true" styleClass="sixhundred" />
			<text row="4" col="4" name="vendor.state" readonly="true"/>
			<text row="5" col="4" name="vendor.postalCode" readonly="true"/>

	    </properties>
	</section>
	
	<section name="taxDetails" visible="True" collapsible="true" collapsed="true">
		<properties>
			<lookup row="1" col="1" name="taxId" lookupType="lookup.taxCodeDetails" readonly="false" inputReadonly="true" styleClass="onehundred"/>
			<text row="1" col="2-3" name="taxCode.description" readonly="true" styleClass="threehundred" />
			<lookup row="1" col="4" name="taxCode.percent" lookupType="lookup.taxCodeDetails" readonly="true" providerClass="com.miriasystems.ui.providers.TaxCodeLookupProvider" styleClass=" percent ten" />
			<text row="2" col="1-3" name="shipToCompany" readonly="false" styleClass="sixhundred"/>
			<text row="3" col="1-3" name="shipToAddress1" readonly="false" styleClass="sixhundred"/>
			<text row="4" col="1-3" name="shipToAddress2" readonly="false" styleClass="sixhundred"/>
			<dropDown row="4" col="4" name="shipToState" choiceList="choice.statesAndProvinces" styleClass="onehundred" readonly="false" />
			<text row="5" col="1-3" name="shipToCity" readonly="false" styleClass="sixhundred"/>
			<text row="5" col="4" name="shipToZip" readonly="false" styleClass="onehundred" />
	    </properties>
	</section>
	
	
	<section name="alternateVendor" visible="false" collapsible="true" collapsed="true">
		<properties>
			<label row ="1" col="1" name="Default Address" position="left"/>
			<text row="2" col="1-4" name="custom2.name" readonly="false" styleClass="fulllookup"/>
			<text row="3" col="1-4" name="custom2.address1" readonly="false" styleClass="fulllookup"/>
			<text row="4" col="1" name="custom2.city" readonly="false" />
			<text row="4" col="2" name="custom2.state" readonly="false"/>
			<text row="4" col="3" name="custom2.postalCode" readonly="false"/>
			<text row="5" col="1" name="custom2.address2" readonly="false"/>
			<text row="5" col="2-4" name="custom2.address3" readonly="false" styleClass="fulllookup"/>
			<label row ="6" col="1" name="Remit Address" position="left"/>
			<text row="7" col="1-4" name="custom2.rmtName" readonly="false" styleClass="fulllookup"/>
			<text row="8" col="1-4" name="custom2.rmtAddress1" readonly="false" styleClass="fulllookup"/>
			<text row="9" col="1" name="custom2.rmtCity" readonly="false" />
			<text row="9" col="2" name="custom2.rmtState" readonly="false"/>
			<text row="9" col="3" name="custom2.rmtPostalCode" readonly="false"/>
	    </properties>
	</section>
	
	
	<section name="lineItems" visible="true" collapsible="true" collapsed="false">
		<lineItemProperties showTotal="true" showTaxTotal="false">
			<currency row="1" col="1" name="quantity" readonly="false" validation="decimal" styleClass="ninety"/>
			<currency row="1" col="2" name="unitPrice"  readonly="false" validation="currency" styleClass="ninety"/><!--unit price-->
			<currency row="1" col="3" name="lineTotal"  readonly="false" validation="required, nonZero" styleClass="ninety" />
			<text row="1" col="4" name="itemCode" readonly="false" styleClass="twohundred"/><!--part desc-->
			<text row="1" col="5" name="itemDescription" readonly="false" styleClass="threehundred"/><!--part desc-->
			<checkbox row="1" col="6-8" name="matched" visible="false" styleClass="ten" />		
			<text row="2" col="3" name="poLine.receivedQuantity"  readonly="true" styleClass="ninety"/>	
			<dropDown row="2" col="4" name="uom" choiceList="choice.UOM" readonly="false" defaultValue="EA" styleClass="ninety"/>
			<date row="2" col="5" readonly="false" name="tbdDate1" styleClass="date"/>		
			<lookup row="2" col="6" name="accountCode" lookupType="lookup.accountCode" validation="required" readonly="true" inputReadonly="true" styleClass="twohundred"/>
			<text row="2" col="7" name="account.description" readonly="true" styleClass="threehundred"/>
		</lineItemProperties> 
		<actions>
			<iconAction name="RemoveAllItems" icon="/images/ico-del-all-w24.png" width="24" height="24" link="javascript:submitCommand(this,'deleteAllLineItems','anchor_lineItems')" visible="true" alwaysActive="false"/>
			<iconAction name="RemoveMarkedItems" icon="/images/ico-del-match-w24.png" width="24" height="24" link="javascript:submitCommand(this,'deleteMarkedLines','anchor_lineItems')" visible="true" alwaysActive="false"/>
			<iconAction name="RemoveUnMarkedItems" icon="/images/ico-del-unmatched-w24.png" width="24" height="24" link="javascript:submitCommand(this,'deleteUnMarkedLines','anchor_lineItems')" visible="true" alwaysActive="false"/>
			<!-- The following set of actions are standard ManagedPay and should be included relatively unmodified from the baseline version in most templates -->
			<iconAction name="selectTemplate" icon="/images/ico-gltemplate-w24.png" width="24" height="24" link="javascript:openTemplateWindow('$contextPath$')" alwaysActive="false" />
			<dropDown name="lineitemsdropdown" choiceList="choice.lineitemsdropdown" alwaysActive="false" onChange="javascript:submitCommandFromDropdown(this,'addLineItem','anchor_lineItems')"/>
			<iconAction name="addLineItem" icon="/images/ico-add-line-w24.png" width="24" height="24" link="javascript:submitCommandUpload(this,'addLineItem','anchor_lineItems')" visible="true" alwaysActive="false"/>
			<iconAction name="removeLineItem" icon="/images/ico-del-line-w24.png" width="24" height="24" link="javascript:submitCommandUpload(this,'deleteLineItem','anchor_lineItems')" visible="true" alwaysActive="false"/>	
		</actions>
	</section>
	
		
	<section name="sourceInformation" visible="true" collapsible="true" collapsed="true">
		<properties>
			<date row="1" col="1" name="scanDate" readonly="true" styleClass="date"/>
			<text row="1" col="2" name="scanType" readonly="true" styleClass="twofifty"/>
			<text row="1" col="3" name="seqId" readonly="true" styleClass="onefifty"/>
			<text row="2" col="1" name="scanSource" readonly="true" styleClass="onefifty"/>
			<text row="2" col="2" name="scanVendorName" readonly="true" styleClass="twofifty"/>
			<text row="2" col="3" name="batchNumber" readonly="true" styleClass="onefifty"/> 		
			<text row="3" col="1" name="scanSite" readonly="true" styleClass="onefifty"/>
			<currency row="3" col="2" name="scanAmount" readonly="true"/>
			<text row="3" col="3" name="scanBy" readonly="true" styleClass="onefifty"/>
		</properties>
	</section>
	


	<hiddenFields>
		<hidden name="postingERPId"/>
		<hidden name="vendorERPId"/>
        <hidden name="newBatchNumber"/>
		<hidden name="paymentTermERPId"/>
		<!--hidden name="paymentTypeERPId"/-->
		<hidden name="uploadRef"/>
		<hidden name="requester.userName"/>
		<hidden name="processInformation.failReason"/>
		<hidden name="AFENumber" defaultValue="1" forceDefault="true"/>
    </hiddenFields>

	<processors>
		<processor name="com.custom.processors.DueDateProcessor"/>
		<processor name="com.miriasystems.processors.FreightAmountProcessor"/>
		<processor name="com.miriasystems.processors.NetAmountProcessor"/>
		<processor name="com.miriasystems.processors.TotalLineAmountProcessor"/>
		<processor name="com.miriasystems.processors.LineTotalCalculator"/>
	</processors>
</propertyTemplate>
