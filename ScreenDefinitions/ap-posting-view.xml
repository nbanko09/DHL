<?xml version="1.0" encoding="UTF-8"?>
<view name="nonpo-process-view" template="nonpo-tpl.xml"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="http://www.managedpay.net/schemas/view.xsd">

    <!-- View permutations:
          -view: This is the standard view
          -viewA: Alternatate vendor has been selected
          -viewH: Special Handling Code has been selected
          -viewS: Short-pay option has been selected
    -->

    <labels default="en">
        <locale name="en">
            <label name="forward" value="Complete"/>
        </locale>
    </labels>

    <property-overrides>
    	<text name="scanVendorName" readonly="true"/>
    	<text name="subType" readonly="true"/>
    	<text name="number" readonly="true"/>
    	<text name="grossAmount" readonly="true"/>
    	<text name="erpDocId" readonly="false" validation="required"/>
    </property-overrides>

	<action-overrides>
	
    	</action-overrides>

    <hidden-overrides>
        <hidden name="processInformation.response" defaultValue="Complete"/>
    </hidden-overrides>
    
     <documentRejection>
            <rejectionReasons>
                <reason name="Pending" commentsRequired="true" note="message.sendToPending">
                </reason>
                <reason name="Return To Indexing" commentsRequired="true" note="message.sendToIndexing">
                </reason>
            </rejectionReasons>
    </documentRejection>

    <validations>
        
    </validations>
</view>
