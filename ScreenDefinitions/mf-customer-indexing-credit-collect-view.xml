<?xml version="1.0" encoding="UTF-8"?>
<view name="all-rescan-view" template="masterfile-customer-collect-credit-tpl.xml"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="http://www.managedpay.net/schemas/view.xsd">

    <labels default="en">
        <locale name="en">
            <label name="forward" value="Complete"/>
            <label name="reject" value="Forward"/>
        </locale>
    </labels>
    
    <property-overrides>
        <textArea name="voucherComments" defaultValue=""/>
     </property-overrides>

    <hidden-overrides>
        <hidden name="processInformation.response" defaultValue="Complete"/>
    </hidden-overrides>

     <documentRejection>
		<rejectionReasons>
			 <reason name="Send to Customer Team" commentsRequired="true" note="message.customerTeam">
			 </reason>
			 <reason name="Return to Requester" commentsRequired="true" note="message.requester">
			 </reason>
		</rejectionReasons>
    </documentRejection>

</view>
