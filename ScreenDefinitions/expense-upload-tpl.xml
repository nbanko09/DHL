<?xml version="1.0" encoding="UTF-8"?>
<propertyTemplate
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://www.managedpay.net/schemas/template.xsd">
	<labels>
		<!-- Label overrides for this template -->
		<locale name="en">
            <label name="forward" value="Upload"/>
            <label name="poId" value="Employee #"/>
            <label name="date" value="Expense Date"/>
        </locale>
	</labels>

	<section name="invoice" visible="true" collapsible="false" collapsed="false">
		<properties>
			<date row="1" col="1" name="date" readonly="false" validation="" styleClass="date"/>
			<text row="1" col="2" name="poId" readonly="false" validation=""/>
		</properties>
		<actions>
			<getNext name="next" readonly="false" showLabel="true" visible="true" toLeft="true" styleClass="getNext70"/>
			<rejectButton name="reject" readonly="false" isAnchored="false" title="rejectTitle" styleClass="button70"/>
			<button name="release" command="release" readonly="false" visible="true" type="submit" title="releaseTitle" styleClass="button70"/>
			<button name="updateRelease" command="updateRelease" readonly="false" visible="true" type="submit" title="updateReleaseTitle" styleClass="button70"/>
			<button name="update" command="update" readonly="false" visible="true" type="submit" title="updateTitle" styleClass="button70"/>
			<button name="forward" command="forward" readonly="false" type="submit" isAnchored="false" title="forwardTitle" styleClass="button70"/>
		</actions>
	</section>
	
	<section name="lineItems" visible="true" collapsible="true" collapsed="false">
			<lineItemProperties showTotal="true">
				<text row="1" col="1" name="poLine.tbdString1" labelKey="Vendor" readonly="true"/>
				<text row="1" col="2-3" name="poLine.itemDescription" labelKey="Description" readonly="true"/>
				<currency row="1" col="4" name="lineTotal" readonly="false" validation="positiveDecimal" styleClass="currency" onBlur="reloadPage(this)"/>
				<text row="1" col="5" name="poLine.account.code" readonly="true"/>
				<text row="1" col="6" name="poLine.costObject1.code" readonly="true" styleClass="seven"/>
				<currency row="1" col="7" name="poLine.billedAmount" readonly="true" labelKey="Expensed Amount" styleClass="currency"/>
			</lineItemProperties>
			<actions>
				<!-- The following set of actions are standard ManagedPay and should be included relatively unmodified from the baseline version in most templates -->
			<!--iconAction name="RemoveAllItems" icon="/images/ico-del-all-w24.png" width="24" height="24" link="javascript:submitCommand(this,'deleteAllLineItems','anchor_lineItems')" visible="true" alwaysActive="false"/-->
			<!--iconAction name="RemoveMarkedItems" icon="/images/ico-del-match-w24.png" docType="upload" width="24" height="24" link="javascript:submitCommand(this,'deleteMarkedLines','anchor_lineItems')" visible="true" alwaysActive="false"/-->
			<!--iconAction name="RemoveUnMarkedItems" icon="/images/ico-del-unmatched-w24.png" docType="upload" width="24" height="24" link="javascript:submitCommand(this,'deleteUnMarkedLines','anchor_lineItems')" visible="true" alwaysActive="false"/-->
			<!--iconAction name="selectTemplate" icon="/images/ico-gltemplate-w24.png" width="24" height="24" link="javascript:openTemplateWindow('$contextPath$')" alwaysActive="false" /-->
			<!--dropDown name="lineitemsdropdown" choiceList="choice.lineitemsdropdown" alwaysActive="false" onChange="javascript:submitCommandFromDropdown(this,'addLineItem','anchor_lineItems')"/-->
			<iconAction name="addLineItem" icon="/images/ico-add-line-w24.png" docType="upload" width="24" height="24" link="javascript:submitCommandUpload(this,'addLineItem','anchor_lineItems')" visible="true" alwaysActive="false"/>
			<iconAction name="removeLineItem" icon="/images/ico-del-line-w24.png" docType="upload" width="24" height="24" link="javascript:submitCommandUpload(this,'deleteLineItem','anchor_lineItems')" visible="true" alwaysActive="false"/>	
			</actions>
	</section>
	
	<hiddenFields>
	    <hidden name="requesterId"/>
	    <hidden name="type" defaultValue='EXP'/>
	    <hidden name="vendorERPId"/>
		<hidden name="uploadRef"/>
		<hidden name="originatorId"/>
		<hidden name="retentionBoxId" defaultValue="upload" forceDefault="true"/>
    </hiddenFields>

    <processors>
    </processors>
</propertyTemplate>
